{
  "name": "Invoice",
  "type": "object",
  "properties": {
    "subscription_id": {
      "type": "string",
      "description": "ID da assinatura"
    },
    "customer_id": {
      "type": "string",
      "description": "ID do cliente"
    },
    "team_id": {
      "type": "string",
      "description": "ID da empresa"
    },
    "amount": {
      "type": "number",
      "description": "Valor da fatura mensal"
    },
    "billing_period_start": {
      "type": "string",
      "format": "date",
      "description": "Início do período de cobrança"
    },
    "billing_period_end": {
      "type": "string",
      "format": "date",
      "description": "Fim do período de cobrança"
    },
    "due_date": {
      "type": "string",
      "format": "date",
      "description": "Data de vencimento"
    },
    "paid_date": {
      "type": "string",
      "format": "date",
      "description": "Data de pagamento"
    },
    "status": {
      "type": "string",
      "enum": [
        "pending",
        "paid",
        "overdue",
        "cancelled"
      ],
      "default": "pending"
    },
    "stripe_invoice_id": {
      "type": "string",
      "description": "ID da fatura no Stripe"
    },
    "description": {
      "type": "string",
      "description": "Descrição da fatura"
    }
  },
  "required": [
    "subscription_id",
    "customer_id",
    "team_id",
    "amount",
    "billing_period_start",
    "billing_period_end",
    "due_date",
    "status"
  ]
}
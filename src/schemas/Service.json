{
  "name": "Service",
  "type": "object",
  "properties": {
    "team_id": {
      "type": "string",
      "description": "ID da empresa que oferece o serviço"
    },
    "name": {
      "type": "string",
      "description": "Nome do serviço (ex: Limpeza Residencial, Aula de Violão)"
    },
    "description": {
      "type": "string",
      "description": "Descrição detalhada do serviço"
    },
    "category": {
      "type": "string",
      "enum": [
        "limpeza",
        "manutencao",
        "consultoria",
        "beleza",
        "aulas",
        "saude",
        "eventos",
        "outros"
      ],
      "description": "Categoria do serviço"
    },
    "price_per_session": {
      "type": "number",
      "minimum": 0.01,
      "description": "Preço por sessão/visita do serviço"
    },
    "duration_minutes": {
      "type": "number",
      "minimum": 1,
      "description": "Duração estimada da sessão em minutos"
    },
    "available_days": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Dias da semana em que o serviço pode ser prestado"
    },
    "available_area_ids": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "IDs das áreas de entrega onde este serviço é prestado"
    },
    "image_url": {
      "type": "string",
      "description": "URL de uma imagem representativa do serviço"
    },
    "status": {
      "type": "string",
      "enum": [
        "active",
        "inactive"
      ],
      "default": "active",
      "description": "Status do serviço"
    }
  },
  "required": [
    "team_id",
    "name",
    "category",
    "price_per_session",
    "duration_minutes"
  ]
}
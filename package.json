{
  "name": "sistema-assinaturas",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "new-frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd new-frontend && npm run dev",
    "dev:backend": "cd backend && npm run start:dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd new-frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "start": "concurrently \"npm run start:frontend\" \"npm run start:backend\"",
    "start:frontend": "cd new-frontend && npm run start",
    "start:backend": "cd backend && npm run start:prod",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd new-frontend && npm test",
    "test:backend": "cd backend && npm test",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd new-frontend && npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "format": "npm run format:frontend && npm run format:backend",
    "format:frontend": "cd new-frontend && npm run format",
    "format:backend": "cd backend && npm run format",
    "type-check": "npm run type-check:frontend && npm run type-check:backend",
    "type-check:frontend": "cd new-frontend && npm run type-check",
    "type-check:backend": "cd backend && npm run type-check",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:build": "docker-compose build",
    "prepare": "husky install",
    "db:migrate": "cd backend && npm run prisma:migrate",
    "db:seed": "cd backend && npm run prisma:seed",
    "clean": "npm run clean:frontend && npm run clean:backend",
    "clean:frontend": "cd new-frontend && rm -rf node_modules .next",
    "clean:backend": "cd backend && rm -rf node_modules dist"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "concurrently": "^8.2.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/seu-usuario/sistema-assinaturas.git"
  },
  "keywords": [
    "nextjs",
    "nestjs",
    "typescript",
    "tailwindcss",
    "subscription-system"
  ],
  "author": "Seu Nome <seu-email@exemplo.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/seu-usuario/sistema-assinaturas/issues"
  },
  "homepage": "https://github.com/seu-usuario/sistema-assinaturas#readme"
}

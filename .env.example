# Ambiente
NODE_ENV=development

# Frontend
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000/api
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="Sistema de Assinaturas"
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here

# Backend
PORT=8000
API_PREFIX=/api
API_VERSION=v1
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRATION=15m
REFRESH_TOKEN_SECRET=your-refresh-token-secret-here
REFRESH_TOKEN_EXPIRATION=7d

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/myapp
DATABASE_SCHEMA=public

# Redis
REDIS_URL=redis://localhost:6379
REDIS_TTL=3600

# Email
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password
MAIL_FROM=noreply@example.com
MAIL_FROM_NAME="Sistema de Assinaturas"

# Logs
LOG_LEVEL=debug
LOG_FORMAT=dev

# Segurança
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Feature Flags
ENABLE_SWAGGER=true
ENABLE_COMPRESSION=true
ENABLE_HELMET=true
ENABLE_CORS=true

# SSL/TLS
SSL_KEY_PATH=/etc/nginx/ssl/server.key
SSL_CERT_PATH=/etc/nginx/ssl/server.crt

# Monitoramento
ENABLE_METRICS=true
METRICS_PORT=9090

# Cache
CACHE_TTL=3600
CACHE_MAX=1000

# Upload
UPLOAD_MAX_SIZE=5242880 # 5MB em bytes
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,application/pdf

# Backup
BACKUP_ENABLED=true
BACKUP_CRON="0 0 * * *" # Todo dia à meia-noite
BACKUP_RETENTION_DAYS=7

# Notificações
NOTIFICATION_ENABLED=true
NOTIFICATION_BATCH_SIZE=100

# Webhooks
WEBHOOK_SECRET=your-webhook-secret-here
WEBHOOK_TIMEOUT=5000

# Integração de Pagamentos
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret
STRIPE_CURRENCY=BRL

# Outros
TZ=America/Sao_Paulo
DEFAULT_LANGUAGE=pt-BR
DEFAULT_CURRENCY=BRL

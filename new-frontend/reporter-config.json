{
  "reporterEnabled": "spec, mocha-junit-reporter, mochawesome",
  "mochaJunitReporterReporterOptions": {
    "mochaFile": "cypress/reports/junit/results-[hash].xml",
    "toConsole": false,
    "attachments": true,
    "jenkinsMode": true,
    "useFullSuiteTitle": true,
    "outputs": true,
    "testCaseSwitchClassnameAndName": true
  },
  "mochawesomeReporterOptions": {
    "reportDir": "cypress/reports/mochawesome",
    "overwrite": false,
    "html": true,
    "json": true,
    "timestamp": true,
    "charts": true,
    "reportPageTitle": "Sistema de Assinaturas - Relatório de Testes",
    "embeddedScreenshots": true,
    "inlineAssets": true,
    "saveAllAttempts": false,
    "code": true,
    "autoOpen": false,
    "showPassed": true,
    "showFailed": true,
    "showPending": true,
    "showSkipped": false,
    "showHooks": "failed",
    "saveJson": true,
    "quiet": false,
    "consoleReporter": "spec",
    "useInlineDiffs": true
  },
  "specReporterOptions": {
    "symbols": {
      "ok": "✓",
      "err": "✖",
      "dot": "․",
      "comma": ",",
      "bang": "!"
    },
    "colors": {
      "success": 32,
      "error": 31,
      "title": 0,
      "suite": 36,
      "pending": 33,
      "pass": 32,
      "fail": 31,
      "skipped": 36
    }
  }
}
